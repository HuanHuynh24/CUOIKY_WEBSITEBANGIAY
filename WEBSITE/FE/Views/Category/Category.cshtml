$(document).ready(function () {
    // Khởi tạo slider cho khoảng giá
    $("#price-range").slider({
        range: true,
        min: 100, // Giá trị tối thiểu
        max: 5000, // Giá trị tối đa
        values: [100, 2000], // Giá trị bắt đầu của slider
        slide: function (event, ui) {
            // Cập nhật giá trị hiển thị khi người dùng kéo slider
            $("#lower-value").text(ui.values[0]);
            $("#upper-value").text(ui.values[1]);
        },
        stop: function (event, ui) {
            // Khi slider dừng, gửi yêu cầu AJAX
            var minPrice = ui.values[0]; // Giá trị thấp
            var maxPrice = ui.values[1]; // Giá trị cao

