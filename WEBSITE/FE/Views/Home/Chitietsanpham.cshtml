    // Lấy tất cả các sao và gán sự kiện click
    const stars = document.querySelectorAll('.star');
    stars.forEach(star => {
        star.addEventListener('click', function (event) {
            // Lấy giá trị số sao từ thuộc tính data-value
            const rating = this.getAttribute('data-value');

            // Cập nhật giá trị của input ẩn
            document.getElementById('rating-input').value = rating;

            // Gọi hàm updateStars để thay đổi màu sắc sao đã chọn
            updateStars(rating);
        });
    });

    // Cập nhật màu sao đã chọn
    function updateStars(value) {
        const starIcons = document.querySelectorAll('.star i');

        // Tô màu vàng các sao từ 1 đến giá trị người dùng chọn
        starIcons.forEach((icon, index) => {
            if (index < value) {
                icon.classList.add('filled');
            } else {
                icon.classList.remove('filled');
            }
        });
    }

