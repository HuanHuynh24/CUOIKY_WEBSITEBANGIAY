@model FE_webgiay.Models.KhuyenMaiViewModel
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">
        @ViewBag.Error
    </div>
}
<h5 class="text-center">Khuyến mãi</h5>
<div class="col-md-9">
    <form asp-action="Create" asp-controller="KhuyenMai" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <!-- Cột trái -->
            <div class="col-md-6">
                <div class="form-group mb-4">
                    <label>Mã khuyến mãi</label>
                    <input asp-for="NewKhuyenMai.MaKhuyenmai" class="form-control" />
                    <span asp-validation-for="NewKhuyenMai.MaKhuyenmai" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <label>
                        Tên khuyến mãi
                    </label>
                    <input asp-for="NewKhuyenMai.TenKhuyenmai" class="form-control" />
                    <span asp-validation-for="NewKhuyenMai.TenKhuyenmai" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label>
                        Phần trăm
                    </label>
                    <input asp-for="NewKhuyenMai.PhanTram" class="form-control" />
                    <span asp-validation-for="NewKhuyenMai.PhanTram" class="text-danger"></span>

                </div>

                <div class="form-group mb-4 mt-5 text-start">
                    <button type="submit" class="btn btn-primary">Thêm khuyến mãi</button>
                </div>
            </div>
        </div>
    </form>
</div>


<div class="col-sm-12 col-xl-12">
    <div class="bg-light rounded h-100 p-4">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Mã khuyến mãi</th>
                    <th scope="col">Tên danh mãi</th>
                    <th scope="col">Phần trăm</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                 @foreach (var item in Model.KhuyenMais)
                {
                    <tr>
                        <td>@item.MaKhuyenmai</td>
                        <td>@item.TenKhuyenmai</td>
                        <td>@item.PhanTram%</td>
                        <td>
                            <a asp-action="Edit" class="btn btn-warning btn-sm" asp-controller="KhuyenMai" asp-route-id="@item.MaKhuyenmai">Edit</a>
                            <a asp-action="Delete" class="btn btn-danger btn-sm" asp-controller="KhuyenMai" asp-route-id="@item.MaKhuyenmai">Delete</a>
                        </td>
                    </tr>
                }         
            </tbody>
        </table>
    </div>
</div>
