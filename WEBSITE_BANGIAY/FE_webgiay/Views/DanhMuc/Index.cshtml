@model FE_webgiay.Models.DanhMucViewModel
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">
        @ViewBag.Error
    </div>
}
<h5 class="text-center">Danh Mục Sản Phẩm</h5>
<div class="col-md-9">
    <form asp-action="Create" asp-controller="DanhMuc" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <!-- Cột trái -->
            <div class="col-md-6">
                <div class="form-group mb-4">
                    <label>Mã danh mục</label>
                    <input asp-for="NewDanhMuc.MaDanhmuc" class="form-control" />
                    <span asp-validation-for="NewDanhMuc.MaDanhmuc" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <label>Tên danh mục</label>
                    <input asp-for="NewDanhMuc.TenDanhmuc" class="form-control" />
                    <span asp-validation-for="NewDanhMuc.TenDanhmuc" class="text-danger"></span>
                </div>

                <div class="form-group mb-4 mt-5 text-start">
                    <button type="submit" class="btn btn-primary">Thêm danh mục</button>
                </div>
            </div>
        </div>
    </form>
</div>

<div class="col-sm-12 col-xl-8">
    <div class="bg-light rounded h-100 p-4">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Mã danh mục</th>
                    <th scope="col">Tên danh mục</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.DanhMucs)
                {
                    <tr>
                        <td>@item.MaDanhmuc</td>
                        <td>@item.TenDanhmuc</td>
                        <td>
                            <a asp-action="Edit" class="btn btn-warning btn-sm" asp-controller="DanhMuc" asp-route-id="@item.MaDanhmuc">Edit</a>
                            <a asp-action="Delete" class="btn btn-danger btn-sm" asp-controller="DanhMuc" asp-route-id="@item.MaDanhmuc">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>